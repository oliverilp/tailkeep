{
  "name": "tailkeep",
  "private": true,
  "scripts": {
    "build": "turbo build --log-order=stream",
    "dev": "turbo dev --log-order=stream",
    "lint": "turbo lint --log-order=stream",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@tailkeep/typescript-config": "workspace:*",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "latest"
  },
  "packageManager": "pnpm@9.1.4",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/server",
    "apps/web",
    "packages/*"
  ]
}
