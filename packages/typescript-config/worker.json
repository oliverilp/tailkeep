{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Worker",
  "extends": "./base.json",
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "lib": ["ES2015", "esnext"],
    "outDir": "./dist",
    "module": "esnext",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
