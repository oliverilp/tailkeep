// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id           Int             @id @default(autoincrement())
  videoId      String // TODO: Rename to youtubeId
  url          String
  title        String
  uploader     String
  duration     String // TODO: Rename to durationString
  // TODO: Add duration number in seconds
  thumbnailUrl String
  description  String
  viewCount    Int
  commentCount Int
  progressList VideoProgress[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VideoProgress {
  id       Int     @id @default(autoincrement())
  active   Boolean
  status   String?
  progress Float
  size     String?
  speed    String?
  eta      String?
  video    Video   @relation(fields: [videoId], references: [id])
  videoId  Int     @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
